{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "esnext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["node"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "paths": {}
    // "typeRoots": ["./"]
  },
  "include": ["src"]
}
